<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--  Start : Your code should be within this block -->

    <TextView
        android:id="@+id/textView_Wel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:lineSpacingExtra="18sp"
        android:text="Hi, Welcome To"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:fontFamily="serif" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:text="TAKE PART IN OUR SURVEY"
        android:textColor="#000000"
        android:textSize="24sp"
        app:fontFamily="serif" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="180dp"
        android:text="Before we start, here are things you shoud know:"
        android:textSize="24sp"
        android:typeface="sans"
        app:fontFamily="serif" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="260dp"
        android:text="-Please be honest when making your choice."
        android:textSize="18sp"
        android:typeface="sans"
        app:fontFamily="serif" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="310dp"
        android:text="-We are just doing a research so you don't have to fake your information."
        android:textSize="18sp"
        android:typeface="sans"
        app:fontFamily="serif" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="370dp"
        android:text="-Please follow the step we designed for you and don't skip any questions."
        android:textSize="18sp"
        android:typeface="sans"
        app:fontFamily="serif" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="470dp"
        android:text="I accept these requests."
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_wel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="520dp"
        android:layout_marginRight="30dp"
        android:background="#009688"
        android:lineSpacingExtra="12sp"
        android:onClick="onclick_buttonw"
        android:text="Click me and Start!"
        android:textColor="#000000"
        android:textSize="18sp"
        android:typeface="sans" />


    <!-- END    : Your code should be within this block -->

</RelativeLayout>