<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    >

    <!--  Start : Your code should be within this block -->
    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="WELCOME TO"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/take_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="TAKE PART IN OUR SURVEY!"
        android:layout_below="@id/welcome"
        />
    <TextView
        android:id="@+id/before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Before we start,here are things you should know:"
        android:layout_below="@id/take_part"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/para1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="- Please be honest when making your choice."
        android:layout_below="@id/before"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/para2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="- We are just doing a reserch so you don't have to fake your information."
        android:layout_below="@id/para1"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/para3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="- Please follow the step we designed for you and don't skip any questions."
        android:layout_below="@id/para2"
        android:layout_marginTop="30dp"
        />
    <CheckBox
        android:id="@+id/accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I accept these requests"
        android:layout_below="@id/para3"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/btn_wel"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="LET'S START!"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@color/colorGreen"
        android:layout_centerHorizontal="true"
        android:onClick="enterSurvey"
        />


    <!-- END    : Your code should be within this block -->
</RelativeLayout>