<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Question 9"
        android:textSize="36sp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="40dp"
        android:text="What characteristic do you think is most important to evaluate a phone?"
        android:textSize="20sp" />
    <RadioGroup
        android:id="@+id/q9_radioGroupId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RadioButton
        android:id="@+id/q9_appearance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="105dp"
        android:colorControlActivated="#00ff00"
        android:text="Appearance"
        android:textColor="#000000"/>
    <RadioButton
        android:id="@+id/q9_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="105dp"
        android:colorControlActivated="#00ff00"
        android:text="Price"
        android:textColor="#000000"/>
    <RadioButton
        android:id="@+id/q9_performance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="105dp"
        android:colorControlActivated="#00ff00"
        android:text="Performance"
        android:textColor="#000000"/>
    <RadioButton
        android:id="@+id/q9_Others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="105dp"
        android:colorControlActivated="#00ff00"
        android:text="Others"
        android:textColor="#000000"/>
    </RadioGroup>
    <Button
        android:id="@+id/q9_next"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="NEXT"
        android:textSize="20sp"
        android:background="#00ff00"
        android:textColor="#000000"/>
    <!-- END    : Your code should be within this block -->

</LinearLayout>
