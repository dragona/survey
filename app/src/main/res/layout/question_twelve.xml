<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Question 12"
        android:textSize="36sp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="40dp"
        android:text="How much money do you earn per month?"
        android:textSize="20sp" />
    <RadioGroup
        android:id="@+id/q12_radioGroupId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RadioButton
        android:id="@+id/q12_havenojob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="60dp"
        android:colorControlActivated="#00ff00"
        android:text="I haven't got a job"
        android:textColor="#000000"/>
    <RadioButton
        android:id="@+id/q12_under3000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="60dp"
        android:colorControlActivated="#00ff00"
        android:text="Under 3000"
        android:textColor="#000000"/>
    <RadioButton
        android:id="@+id/q12_3000_5000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="60dp"
        android:colorControlActivated="#00ff00"
        android:text="3000-5000"
        android:textColor="#000000"/>
    <RadioButton
        android:id="@+id/q12_5000_10000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="60dp"
        android:colorControlActivated="#00ff00"
        android:text="5000-10000"
        android:textColor="#000000"/>
    <RadioButton
        android:id="@+id/q12_morethan10000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="60dp"
        android:colorControlActivated="#00ff00"
        android:text="More than 10000"
        android:textColor="#000000"/>
    </RadioGroup>
    <Button
        android:id="@+id/q12_next"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="NEXT"
        android:textSize="20sp"
        android:background="#00ff00"
        android:textColor="#000000"/>
    <!-- END    : Your code should be within this block -->

</LinearLayout>
